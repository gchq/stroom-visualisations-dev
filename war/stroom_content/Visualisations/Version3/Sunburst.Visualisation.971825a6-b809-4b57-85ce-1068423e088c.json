{
    "tabs": [
        {
            "name": "Data",
            "controls": [
                {
                    "id": "path",
                    "type": "field",
                    "label": "Path"
                },
                {
                    "id": "value",
                    "type": "field",
                    "label": "Value"
                },
                {
                    "id": "color",
                    "type": "field",
                    "label": "Colour"
                },
                {
                    "id": "gridSeries",
                    "type": "field",
                    "label": "Grid Series"
                }
            ]
        },
        {
            "name": "Sunburst",
            "controls": [
                {
                    "id": "delimiter",
                    "type": "text",
                    "label": "Path delimiter",
                    "defaultValue": "/"

                },
                {

                    "id": "initialDepth",
                    "type": "number",
                    "label": "Initial layer depth",
                    "defaultValue": "10",
                    "max": "50",
                    "min": "2"

                },
                {
                    "id" : "showLabels",
                    "type" : "selection",
                    "label" : "Show Labels",
                    "values" : [
                        "True",
                        "False"
                    ],
                    "defaultValue" : "True"
                },
                {
                    "id" : "expand",
                    "type" : "selection",
                    "label" : "Click to expand (for static data)",
                    "values" : [
                        "True",
                        "False"
                    ],
                    "defaultValue" : "False"
                },
                {
                    "id": "maxValues",
                    "type": "number",
                    "label": "Max Values",
                    "defaultValue": "500",
                    "max": "10000",
                    "min": "1"
                },
                {
                    "id": "maxGridSeries",
                    "type": "number",
                    "label": "Max Grid Series",
                    "defaultValue": "36",
                    "min": "1",
                    "max": "144"
                }

            ]
        }
    ],
    "data": {
        "structure": {
            "nest": {
                "key": {
                    "id": "${gridSeries}",
                    "sort": {
                        "enabled": "false"
                    }
                },
                "nest": {
                    "key": {
                        "id": "${series}",
                        "sort": {
                            "enabled": "false"
                        }
                    },
                    "values": {
                        "fields": [
                            {
                                "id": "${path}"
                            },
                            {
                                "id": "${value}"
                            },
                            {
                                "id": "${color}"
                            }
                        ],
                        "limit" : {
                            "enabled" : "true",
                            "size" : "${maxValues}"
                        }
                    },
                    "limit": {
                        "enabled": "true",
                        "size": "1"
                    }
                },
                "limit": {
                    "enabled": "true",
                    "size": "${maxGridSeries}"
                }
            }
        }
    }
}